<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="ticket_view_task_form" model="ir.ui.view">
            <field name="name">helpdesk.ticket.inherit.view.form</field>
            <field name="model">helpdesk.task</field>
            <field name="inherit_id" ref="helpdesk.ticket_view_form"/>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']"  position="after">
                    <field name="project_id"/>
                    <field name="task_id"/>
                    <field name="planned_hours" options="{'no_create':True, no_open:'True'}"/>
                    <field name="effective_hours" options= "{'no_create':True, no_open:'True'}"/>
                    <field name="timesheet_ids" options= "{'no_create':True, no_open:'True'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
